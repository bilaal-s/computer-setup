modules-left = i3 gap mood
modules-center = date
modules-right = mpd pulseaudio gap cpu memory filesystem gap wlan eth battery temperature gap powermenu

tray-position = none
tray-padding = 0

cursor-click = pointer
cursor-scroll = ns-resize

[bar/secondary]
inherit = bar/main
monitor = DP-2
modules-left = date
modules-center = i3
modules-right = powermenu

[module/mood]
