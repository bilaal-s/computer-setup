[colors]
background = #2f2a38
foreground = #fff2e7
active = #5092cb
inactive = #37648c
highlight = #7485AC
error = #5667A5

[bar/main]
dpi = ${xrdb:Xft.dpi}
width = 100%
height = ${env:PB_HEIGHT}
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true

background = #00000000
foreground = ${colors.foreground}

border-left-size = 8
border-right-size = 8
border-top-size = 4
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

